<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%};
  }

  .anray-box-title {
      text-align: center;
      font-size: 2rem;
      margin-bottom: 3rem;
      font-weight: normal;
    }

    .anray-box-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: flex-start;
    }

    .anray-box-item {
      flex: 0 1 240px;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .anray-box-item__image {
      width: 100%;
      aspect-ratio: 1;
      background: #f5f5f5;
      margin-bottom: 1rem;
      border-radius: 0.5rem;
      overflow: hidden;
    }

    .anray-box-item__image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .anray-box-item__title {
      font-size: 1rem;
      margin: 0;
      font-weight: normal;
    }

    .anray-box-item__quantity {
      font-size: 0.9rem;
      color: #666;
      margin-top: 0.5rem;
    }

    @media screen and (max-width: 768px) {
      .anray-box-title {
        font-size: 1.5rem;
        margin-bottom: 2rem;
      }

      .anray-box-grid {
        gap: 15px;
      }

      .anray-box-item {
        flex: 0 1 calc(50% - 7.5px);
      }
    }
</style>

