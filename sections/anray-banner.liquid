<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%};
    position: relative;
  }

      .anray-banner {
        --anray-banner-height: 70vh;
      } 

      .anray-banner {
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0;
        padding: 0 0 0 0;
        position: relative;
        height: var(--anray-banner-height);
        z-index: 0;
        margin: 0 auto;
        background-color: #ffffff00;
      }

      .anray-banner-backwrap::before {
        content: "";
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        top: 0;
        margin: auto;
        width: 100%;
        height: 60vh;
        z-index: 0;
        background: #efede3;
      }

      .anray-banner-img {
        width: calc(100% / 2);
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
      }
      .anray-banner-img img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        display: block;
      }
      .anray-banner-content {
        width: calc(100% / 2);
        padding-left: 60px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-width: 0;
      }
      .anray-banner-title {
        font-size: 3rem;
        font-weight: bold;
        color: #3a3632;
        margin: 0 0 1rem 0;
        line-height: 1.1;
      }
      .anray-banner-desc {
        color: #6d6a67;
        font-size: 1rem;
        margin-bottom: 2rem;
        margin-top: 0;
      }
      .anray-banner-btns {
        display: flex;
        gap: 1rem;
      }
      .anray-btn {
        display: inline-block;
        padding: 0.625rem 1.75rem;
        border-radius: 0.5rem;
        font-size: 1.125rem;
        font-weight: 500;
        text-decoration: none;
        transition: background 0.2s, color 0.2s;
      }
      .anray-btn--primary {
        background: #ff9000;
        color: #fff;
        border: none;
      }
      .anray-btn--primary:hover {
        background: #e07d00;
      }
      .anray-btn--secondary {
        background: #cbbba7;
        color: #3a3632;
        border: none;
      }
      .anray-btn--secondary:hover {
        background: #b3a18b;
      }
      @media (max-width: 900px) {
        .anray-banner {
          flex-direction: column;
          padding: 1.5rem 0 0 0;
          min-height: unset;
          max-width: 100%;
          height: auto;
        }

        .anray-banner-backwrap::before {
          content: "";
          position: absolute;
          left: 0;
          right: 0;
          bottom: 0;
          width: 100%;
          height: 100%;
          z-index: 0;
          background: linear-gradient(
            180deg,
            rgba(239, 237, 224, 1) 0%,
            rgba(239, 237, 224, 1) 35%,
            rgba(252, 250, 246, 1) 65%,
            rgba(252, 250, 246, 1) 90%
          );
          border-radius: 2rem;
        }

        .anray-banner-img {
          height: 30rem;
          flex: none;
          justify-content: center;
          width: 100%;
          margin-bottom: 1.25rem;
        }
        .anray-banner-img img {
          width: auto;
          height: 100%;
          max-width: 90vw;
          display: block;
          margin: 0 auto;
        }
        .anray-banner-content {
          padding-left: 0;
          margin-top: 0;
          flex: none;
          height: auto;
          align-items: center;
          text-align: center;
          width: 100%;
        }
        .anray-banner-title {
          font-size: 1.5rem;
        }
        .anray-banner-desc {
          font-size: 0.875rem;
          margin-bottom: 1.25rem;
        }
        .anray-banner-btns {
          flex-direction: column;
          gap: 0.75rem;
          align-items: center;
        }
        .anray-btn {
          width: 80vw;
          max-width: 16.25rem;
          font-size: 1rem;
          padding: 0.625rem 0;
        }
      }

      @media (max-width: 767.99px) {
        .anray-banner-img {
          height: 20rem;
        }
      }
</style>

<div
  class="section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}"
  {% if section.settings.transparent_header %}
    allow-transparent-header
  {% endif %}
>
  <div class="page-width{% if section.settings.narrow %} page-width--narrow{% endif %} relative anray-banner-backwrap">
    <!-- 内容区域 -->
    <div class="anray-banner">
      <div class="anray-banner-img">
        <img
          width="100%"
          height="100%"
          src="https://cdn.shopify.com/s/files/1/0683/9065/0074/files/m100_1.png?v=1749518316"
          alt="Juicer"
        >
      </div>
      <div class="anray-banner-content">
        <h2 class="anray-banner-title">
          <span>Always fresh</span><br>
          <span>Forever cutting eage.</span>
        </h2>
        <p class="anray-banner-desc">
          Replicate the crisp, refreshing flavors of your favorite iced drinks at home with TK–O2.
        </p>
        <div class="anray-banner-btns">
          <a href="https://www.anray.com/products/anray-griddle?utm_source=copyToPasteBoard&utm_medium=product-links&utm_content=web" class="anray-btn anray-btn--primary">Buy now</a>
          <a href="#" class="anray-btn anray-btn--secondary">Learn more</a>
        </div>
      </div>
    </div>
    <!-- 内容区域 -->
  </div>
</div>

