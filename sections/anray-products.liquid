<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%};
  }

  .anray-products-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(130px, 1fr));
    gap: 40px;
    justify-content: center;
  }

  .anray-product-card {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .anray-product-image-container {
    /* background-color: #f2f3f5; */
    padding: 20px;
        padding-bottom: 0;
    border-radius: 8px;
    /* margin-bottom: 15px; */
  }

  .anray-product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    max-height:300px;
  }

  .anray-product-title {
    font-size: 18px;
    margin-bottom: 5px;
    font-weight: 500;
  }

  .anray-product-price {
    font-size: 16px;
    color: #333;
  }

  /* 移动端响应式样式 */
  @media screen and (max-width: 768px) {
    .anray-products-grid {
      grid-template-columns: repeat(2, minmax(130px, 1fr));
      gap: 15px;
    }

    .anray-product-title {
      font-size: 16px;
    }

    .anray-product-price {
      font-size: 14px;
    }

    .anray-product-image-container {
      padding: 15px;
    }
  }

  /* 响应式样式 */
  @media screen and (min-width: 769px) {
    .anray-products-grid {
      grid-template-columns: repeat(4, minmax(0, 300px));
    }
  }
</style>

