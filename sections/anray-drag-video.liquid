<script>
  document.addEventListener('DOMContentLoaded', function () {
    // 初始化拖拽滚动
    const dragScroll = new DragScroll('.anray-inspired-grid', {
      scrollMultiplier: 1.2, // 滚动灵敏度
      momentumMultiplier: 20, // 惯性系数
      frictionFactor: 0.92, // 摩擦系数，越小减速越快
    });

    // 存储实例以便需要时访问
    window.dragScroll = dragScroll;

    // 动画效果代码
    const container = document.querySelector('.anray-inspired-grid');
    const items = document.querySelectorAll('.anray-inspired-item');

    // 初始化：除了可见区域内的项目，其他都添加动画类
    function initializeItems() {
      const containerRect = container.getBoundingClientRect();
      items.forEach((item) => {
        const itemRect = item.getBoundingClientRect();
        // 检查项目是否在可见区域内
        const isVisible =
          itemRect.left >= containerRect.left - itemRect.width / 2 &&
          itemRect.right <= containerRect.right + itemRect.width / 2;

        if (!isVisible) {
          item.classList.add('anray-animate');
        } else {
          item.classList.remove('anray-animate');
        }
      });
    }

    // 滚动时更新动画
    container.addEventListener('scroll', function () {
      const containerRect = container.getBoundingClientRect();
      items.forEach((item) => {
        const itemRect = item.getBoundingClientRect();
        // 检查项目是否在可见区域内
        const isVisible =
          itemRect.left >= containerRect.left - itemRect.width / 2 &&
          itemRect.right <= containerRect.right + itemRect.width / 2;

        if (!isVisible) {
          item.classList.add('anray-animate');
        } else {
          item.classList.remove('anray-animate');
        }
      });
    });

    // 初始化
    initializeItems();
  });
</script>
