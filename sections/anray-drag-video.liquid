<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%};
  }

  .anray-inspired-title {
    text-align: center;
    font-size: 32px;
    color: rgb(107, 91, 84);
    margin-bottom: 30px;
  }

  .anray-inspired-grid {
    display: flex;
    gap: 15px;
    overflow-x: auto;
    /* 火狐浏览器隐藏滚动条 */
    scrollbar-width: none;
    /* IE10+ 隐藏滚动条 */
    -ms-overflow-style: none;
    /* 旧版火狐浏览器隐藏滚动条 */
    scrollbar-color: transparent transparent;
    -ms-overflow-style: none;
    padding-bottom: 10px;
    width: 100%;
    /* scroll-snap-type: x mandatory; */
    /* scroll-behavior: smooth; */
    padding: 20px 0;
    cursor: grab;
  }

  .anray-inspired-grid::-webkit-scrollbar {
    display: none;
  }

  .anray-inspired-item {
    flex: 0 0 calc((100% - 75px) / 6);
    overflow: hidden;
    border-radius: 15px;
    scroll-snap-align: center;
    transition: transform 0.5s ease;
    transform-origin: center center;
  }

  .anray-inspired-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* 添加动画效果 */
  .anray-inspired-item.anray-animate {
    transform: scale(0.8);
    opacity: 0.7;
  }

  /* 拖拽时的样式 */
  .anray-inspired-grid.grabbing {
    cursor: grabbing;
  }
</style>

