<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%};
  }
  {{ 'anray-recipes-texts.css' | asset_url | stylesheet_tag }}

</style>

<div
  class="section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}"
  {% if section.settings.transparent_header %}
    allow-transparent-header
  {% endif %}
>
  <div class="page-width{% if section.settings.full_width %} page-width--full{% endif %} relative">
    <!-- 内容区域 -->
    <!-- 新增内容 -->
    <div class="anray-ingredients-section">
      <!-- header -->
      <div class="anray-ingredients-header">
        <h2 class="anray-ingredients-title">{{ section.settings.ingredients_title | default: 'Ingredients' }}</h2>
        {% if section.settings.show_print_button %}
          <a href="javascript:window.print();" class="anray-print-link">{{ section.settings.print_button_text | default: 'Print this recipe' }}</a>
        {% endif %}
      </div>
      <!-- directions -->
      <div class="anray-directions_ingredients {% if section.settings.use_alternate_layout %}anray-ingredients-container{% else %}anray-directions-container{% endif %}">
        {% if section.settings.use_alternate_layout %}
          <div class="anray-ingredient-column">
            <div class="anray-ingredient-item"><span class="anray-measurement">2 ½ cups</span> buttermilk</div>
            <div class="anray-ingredient-item"><span class="anray-measurement">2</span> large eggs, lightly beaten</div>
            <div class="anray-ingredient-item"><span class="anray-measurement">4 Tbsp</span> melted butter</div>
            <div class="anray-ingredient-item">Natural green food coloring</div>
            <div class="anray-ingredient-item">
              Yield:<span class="anray-measurement">12-16</span> medium-sized pancakes
            </div>
          </div>
          <div class="anray-ingredient-column">
            <div class="anray-ingredient-item"><span class="anray-measurement">2 ½ cups</span> buttermilk</div>
            <div class="anray-ingredient-item"><span class="anray-measurement">2</span> large eggs, lightly beaten</div>
            <div class="anray-ingredient-item"><span class="anray-measurement">4 Tbsp</span> melted butter</div>
            <div class="anray-ingredient-item">Natural green food coloring</div>
            <div class="anray-ingredient-item">
              Yield:<span class="anray-measurement">12-16</span> medium-sized pancakes
            </div>
          </div>
          <div class="anray-ingredient-column">
            <div class="anray-ingredient-item"><span class="anray-measurement">2 ½ cups</span> buttermilk</div>
            <div class="anray-ingredient-item"><span class="anray-measurement">2</span> large eggs, lightly beaten</div>
            <div class="anray-ingredient-item"><span class="anray-measurement">4 Tbsp</span> melted butter</div>
            <div class="anray-ingredient-item">Natural green food coloring</div>
            <div class="anray-ingredient-item">
              Yield:<span class="anray-measurement">12-16</span> medium-sized pancakes
            </div>
          </div>
        {% else %}
          <ol class="anray-directions-ol">
            <li>
              <span class="anray-directions-number">1</span>
              <span class="anray-directions-text">
                In a large bowl, whisk together the flour, baking powder, and salt.
              </span>
            </li>
            <li>
              <span class="anray-directions-number">2</span>
              <span class="anray-directions-text">
                In a large bowl, whisk together the flour, baking powder, and salt.
              </span>
            </li>
          </ol>
        {% endif %}
      </div>
    </div>
    <!-- 内容区域 -->
  </div>
</div>

{% schema %}
{
  "name": "Recipes texts",
  "settings": [
    {
      "type": "checkbox",
      "id": "use_alternate_layout",
      "label": "使用替代布局",
      "default": true,
      "info": "选中使用列表布局，取消选中使用配料布局"
    },
    {
      "type": "text",
      "id": "ingredients_title",
      "label": "配料标题",
      "default": "Ingredients"
    },
    {
      "type": "checkbox",
      "id": "show_print_button",
      "label": "显示打印按钮",
      "default": true
    },
    {
      "type": "text",
      "id": "print_button_text",
      "label": "打印按钮文本",
      "default": "打印此食谱"
    },
    {
      "type": "header",
      "content": "布局设置"
    },
    {
      "type": "checkbox",
      "id": "transparent_header",
      "label": "t:sections.global.settings.transparent_header.label",
      "info": "t:sections.global.settings.transparent_header.info",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.global.settings.header__colors.content",
      "info": "t:sections.global.settings.header__colors.info"
    },
    {
      "type": "color",
      "id": "color_text",
      "label": "t:sections.global.settings.color_text.label"
    },
    {
      "type": "color",
      "id": "color_background",
      "label": "t:sections.global.settings.color_background.label"
    },
    {
      "type": "color_background",
      "id": "gradient_background",
      "label": "t:sections.global.settings.gradient_background.label"
    },
    {
      "type": "color",
      "id": "color_button_text",
      "label": "t:sections.global.settings.color_button_text.label"
    },
    {
      "type": "color",
      "id": "color_button_background",
      "label": "t:sections.global.settings.color_button_background.label"
    },
    {
      "type": "color_background",
      "id": "color_button_gradient",
      "label": "t:sections.global.settings.color_button_gradient.label"
    },
    {
      "type": "header",
      "content": "t:sections.global.settings.header__section.content"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_top.label",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_bottom.label",
      "default": 72
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "t:sections.global.settings.divider.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "t:sections.global.settings.full_width.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "rounded",
      "default": false,
      "label": "t:sections.global.settings.rounded.label"
    }
  ],
  "presets": [
    {
      "name": "Recipes texts"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
