{% comment %} ANRAY Footer Section {% endcomment %}
<style>
  .anray-footer-container {
    background-color: {{ section.settings.color_background }};
    color: {{ section.settings.color_text }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    font-family: sans-serif; /* 基础字体，请根据您的品牌字体调整 */
  }
  .anray-footer-main {
    display: flex;
    justify-content: space-between;
    gap: 30px;
    flex-wrap: wrap;
    max-width: 1200px; /* 或者使用 page-width 变量 */
    margin: 0 auto;
    padding-left: 15px;
    padding-right: 15px;
  }
  .anray-footer-left {
    flex: 1;
    min-width: 220px; /* 适应logo和支付信息 */
    margin-bottom: 30px;
  }
  .anray-footer-right {
    flex: 3;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 20px; /* 栏目间的间隙 */
  }
  .anray-footer-column {
    flex-grow: 1;
    min-width: 160px; /* 每列的最小宽度 */
    margin-bottom: 20px;
  }
  .anray-footer-column h5 {
    font-size: 1em; /* 调整为图片中的大小 */
    font-weight: bold; /* 图片中标题是粗体 */
    margin-bottom: 15px; /* 标题和链接列表的间距 */
    color: {{ section.settings.color_text }};
  }
  .anray-footer-column .rte,
  .anray-footer-column .rte p,
  .anray-footer-column .rte a {
    font-size: 0.9em;
    line-height: 1.6;
    color: {{ section.settings.color_text }};
  }
  .anray-footer-column .rte a {
    text-decoration: underline; /* 根据需要调整 */
  }
  .anray-footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .anray-footer-column ul li {
    margin-bottom: 8px; /* 链接项之间的间距 */
  }
  .anray-footer-column ul li a {
    text-decoration: none;
    color: {{ section.settings.color_text }};
    font-size: 0.9em; /* 调整为图片中的大小 */
    line-height: 1.6;
  }
  .anray-footer-column ul li a:hover {
    text-decoration: underline;
  }
  .anray-footer-logo img {
    max-height: {{ section.settings.logo_height }}px;
    margin-bottom: 30px; /* Logo 和下方内容的间距 */
  }
  .anray-footer-secure-payments h4,
  .anray-footer-social h4 {
    font-size: 0.9em; /* 调整为图片中的大小 */
    font-weight: bold;
    margin-top: 25px;
    margin-bottom: 10px;
    color: {{ section.settings.color_text }};
  }
  .payment-icons { /* Styling for the <ul> container */
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 8px; /* Space between icons */
  }
  .payment-icons li svg {
    height: {{ section.settings.payment_icon_height }}px;
    width: auto; /* Maintain aspect ratio */
    display: block; /* Ensure proper layout */
  }
  .payment-icons--gray li svg {
    fill: {{ section.settings.color_text }}; /* Or a specific monochrome color */
  }
  .social-icons a svg { /* 假设 social-icons snippet 使用 SVG */
    fill: {{ section.settings.color_text }};
    width: 24px; /* 根据需要调整社交图标大小 */
    height: 24px;
  }
   .social-icons a {
    margin-right: 10px;
  }
  .anray-footer-copyright {
    text-align: center;
    margin-top: 40px; /* 与上方内容的间距 */
    padding-top: 20px;
    border-top: 1px solid #e0e0e0; /* 分割线颜色 */
    font-size: 0.85em; /* 版权文本大小 */
    color: {{ section.settings.color_text }};
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 15px;
    padding-right: 15px;
  }

  @media (max-width: 990px) { /* 中等屏幕调整 */
    .anray-footer-right {
      justify-content: flex-start; /* 在较小屏幕上从左开始排列 */
    }
    .anray-footer-column {
       min-width: calc(50% - 20px); /* 两列布局 */
    }
  }

  @media (max-width: 768px) { /* 移动端调整 */
    .anray-footer-main {
      flex-direction: column;
      align-items: flex-start; /* 在移动端左对齐 */
      text-align: left;
    }
    .anray-footer-left,
    .anray-footer-right {
      width: 100%;
      flex-basis: auto;
    }
    .anray-footer-column {
      min-width: 100%; /* 移动端单列显示 */
    }
    .anray-footer-secure-payments,
    .anray-footer-social,
    .anray-footer-logo {
      text-align: left; /* 确保左侧内容在移动端也左对齐 */
    }
  }
</style>

<div class="anray-footer-container">
  <div class="anray-footer-main page-width">
    <div class="anray-footer-left">
      {%- if section.settings.logo != blank -%}
        <div class="anray-footer-logo">
          <a href="{{ routes.root_url }}" aria-label="{{ shop.name }} Logo">
            <img src="{{ section.settings.logo | image_url: height: section.settings.logo_height }}"
                 alt="{{ section.settings.logo.alt | default: shop.name }}"
                 height="{{ section.settings.logo_height }}"
                 width="{{ section.settings.logo.width | divided_by: section.settings.logo.height | times: section.settings.logo_height | round }}"
                 loading="lazy">
          </a>
        </div>
      {%- endif -%}

      {%- if section.settings.show_secure_payments -%}
        <div class="anray-footer-secure-payments">
          {%- if section.settings.secure_payments_title != blank -%}
            <h4>{{ section.settings.secure_payments_title }}</h4>
          {%- endif -%}
          <div class="payment-icons-container">
            {%- unless shop.enabled_payment_types == empty -%}
              <ul class="payment-icons{% if section.settings.monochrome_payment_icons %} payment-icons--gray{% endif %}">
                {%- for type in shop.enabled_payment_types -%}
                  <li>
                    {{- type | payment_type_svg_tag -}}
                  </li>
                {%- endfor -%}
              </ul>
            {%- endunless -%}
          </div>
        </div>
      {%- endif -%}

      {%- if section.settings.show_social_media -%}
        <div class="anray-footer-social">
          {%- if section.settings.social_media_title != blank -%}
            <h4>{{ section.settings.social_media_title }}</h4>
          {%- endif -%}
          {%- render 'social-icons' -%}
        </div>
      {%- endif -%}
    </div>

    <div class="anray-footer-right">
      {%- for block in section.blocks -%}
        <div class="anray-footer-column" {{ block.shopify_attributes }}>
          {%- case block.type -%}
            {%- when 'menu' -%}
              {%- if block.settings.heading != blank -%}
                <h5>{{ block.settings.heading }}</h5>
              {%- endif -%}
              {%- if block.settings.custom_text != blank -%}
                <div class="rte">{{ block.settings.custom_text }}</div>
              {%- endif -%}
              {%- if block.settings.menu != blank and block.settings.menu.links.size > 0 -%}
                <ul>
                  {%- for link in block.settings.menu.links -%}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
  </div>

  {%- if section.settings.copyright_text != blank -%}
    <div class="anray-footer-copyright">
      <p>{{ section.settings.copyright_text | replace: '[year]', 'now' | date: '%Y' }}</p>
    </div>
  {%- endif -%}
</div>

