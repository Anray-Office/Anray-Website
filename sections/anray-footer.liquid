<div class="anray-footer-container">
  <div class="anray-footer-main page-width">
    <div class="anray-footer-left">
      {%- if section.settings.logo != blank -%}
        <div class="anray-footer-logo">
          <a href="{{ routes.root_url }}" aria-label="{{ shop.name }} Logo">
            <img
              src="{{ section.settings.logo | image_url: height: section.settings.logo_height }}"
              alt="{{ section.settings.logo.alt | default: shop.name }}"
              height="{{ section.settings.logo_height }}"
              width="{{ section.settings.logo.width | divided_by: section.settings.logo.height | times: section.settings.logo_height | round }}"
              loading="lazy"
            >
          </a>
        </div>
      {%- endif -%}

      {%- if section.settings.show_secure_payments -%}
        <div class="anray-footer-secure-payments">
          {%- if section.settings.secure_payments_title != blank -%}
            <p class="text-base-2xl font-medium anray-button--sm">{{ section.settings.secure_payments_title }}</p>
          {%- endif -%}
          <div class="payment-icons-container">
            {%- unless shop.enabled_payment_types == empty -%}
              <ul class="payment-icons{% if section.settings.monochrome_payment_icons %} payment-icons--gray{% endif %}">
                {%- for type in shop.enabled_payment_types -%}
                  <li>
                    {{- type | payment_type_svg_tag -}}
                  </li>
                {%- endfor -%}
              </ul>
            {%- endunless -%}
          </div>
        </div>
      {%- endif -%}

      {%- if section.settings.show_social_media -%}
        <div class="anray-footer-social">
          {%- if section.settings.social_media_title != blank -%}
            <p class="text-base-2xl font-medium anray-button--sm">{{ section.settings.social_media_title }}</p>
          {%- endif -%}
          {%- render 'social-icons', size:'lg', gap:'7' -%}
        </div>
      {%- endif -%}
    </div>

    <div class="anray-footer-right flex flex-wrap flex-col md:flex-row md:grow md:gap-12">
      {%- for block in section.blocks -%}
        {%- if block.type == 'menu' -%}
          <details class="anray-footer-accordion-item details" {{ block.shopify_attributes }}>
            <summary class="anray-footer-accordion-summary">
              {%- if block.settings.heading != blank -%}
                <span class="anray-footer-accordion-heading">{{ block.settings.heading }}</span>
              {%- endif -%}
              {# TODO: Consider adding a chevron icon here for open/close state #}
            </summary>
            <div class="anray-footer-accordion-content">
              {%- if block.settings.custom_text != blank -%}
                <div class="rte">{{ block.settings.custom_text }}</div>
              {%- endif -%}
              {%- if block.settings.menu != blank and block.settings.menu.links.size > 0 -%}
                <ul class="anray-footer-menu-list">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="block reversed-link text-sm-lg leading-tight">
                        {{ link.title }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
          </details>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>

  {%- if section.settings.copyright_text != blank -%}
    <div class="anray-footer-copyright">
      <div class="anray-footer-copyright-content page-width">
        <p class="anray-footer-copyright-text">
          {{ section.settings.copyright_text | replace: '[year]', 'now' | date: '%Y' }}
        </p>

        {%- if section.settings.show_policy_links -%}
          {%- assign policy_links = false -%}
          {%- for policy in shop.policies -%}
            {%- if policy != blank -%}
              {%- assign policy_links = true -%}
              {%- break -%}
            {%- endif -%}
          {%- endfor -%}
          {%- if policy_links -%}
            <ul class="anray-footer-policy-links">
              {%- for policy in shop.policies -%}
                {%- if policy != blank -%}
                  <li>
                    <a href="{{ policy.url }}">{{ policy.title }}</a>
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        {%- endif -%}

        {%- liquid
          assign enable_language_selector = false
          if section.settings.enable_language_selector and localization.available_languages.size > 1
            assign enable_language_selector = true
          endif

          assign enable_country_selector = false
          if section.settings.enable_country_selector and localization.available_countries.size > 1
            assign enable_country_selector = true
          endif
        -%}

        {%- if enable_language_selector or enable_country_selector -%}
          <div class="anray-footer-localization">
            {%- if enable_language_selector -%}
              <div>
                {%- form 'localization', id: 'AnrayFooterLanguageForm', class: 'localization__form' -%}
                  <label for="AnrayFooterLanguageList" class="sr-only">{{ 'localization.language_label' | t }}</label>
                  <button type="button" class="localization__item">
                    {{ localization.language.endonym_name | capitalize }}
                  </button>
                  <select
                    name="locale_code"
                    id="AnrayFooterLanguageList"
                    class="localization__item"
                    onchange="this.form.submit()"
                  >
                    {%- for language in localization.available_languages -%}
                      <option
                        value="{{ language.iso_code }}"
                        {%- if language.iso_code == localization.language.iso_code %}
                          selected
                        {% endif %}
                      >
                        {{ language.endonym_name | capitalize }}
                      </option>
                    {%- endfor -%}
                  </select>
                {%- endform -%}
              </div>
            {%- endif -%}

            {%- if enable_country_selector -%}
              <div>
                {%- form 'localization', id: 'AnrayFooterCountryForm', class: 'localization__form' -%}
                  <label for="AnrayFooterCountryList" class="sr-only">{{ 'localization.country_label' | t }}</label>
                  <button type="button" class="localization__item">
                    {{ localization.country.name }} ({{ localization.country.currency.iso_code }}
                    {{ localization.country.currency.symbol }})
                  </button>
                  <select
                    name="country_code"
                    id="AnrayFooterCountryList"
                    class="localization__item"
                    onchange="this.form.submit()"
                  >
                    {%- for country in localization.available_countries -%}
                      <option
                        value="{{ country.iso_code }}"
                        {%- if country.iso_code == localization.country.iso_code %}
                          selected
                        {% endif %}
                      >
                        {{ country.name }} ({{ country.currency.iso_code }}
                        {{ country.currency.symbol }})
                      </option>
                    {%- endfor -%}
                  </select>
                {%- endform -%}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  {%- endif -%}
</div>

