{% comment %} ANRAY Footer Section {% endcomment %}
<style>
  .anray-footer-container {
    background-color: {{ section.settings.color_background }};
    color: {{ section.settings.color_text }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    font-family: sans-serif; /* 基础字体，请根据您的品牌字体调整 */
  }
  .anray-footer-main {
    display: flex;
    justify-content: space-between;
    gap: 130px;
    flex-wrap: wrap;
    /* max-width: 1200px; /* 或者使用 page-width 变量 */ */
    /* margin: 0 auto;
    padding-left: 15px;
    padding-right: 15px; */
  }
  .anray-footer-left {
    flex: 1;
    min-width: 220px; /* 适应logo和支付信息 */
    margin-bottom: 70px;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .anray-footer-accordion-item { /* 替换 .anray-footer-column */
    margin-bottom: 20px; /* 保留底部边距 */
    /* 宽度将由父级 flex 容器的 Tailwind 类 (md:grow) 控制 */
  }

  .anray-footer-accordion-summary { /* 替换 .anray-footer-column h5 */
    display: block; /* 允许 margin-bottom */
    font-size: 1em;
    font-weight: bold;
    margin-bottom: 15px;
    color: {{ section.settings.color_text }};
    text-transform: uppercase;
    list-style: none; /* 移除默认的 disclosure marker */
    cursor: pointer;
  }
  .anray-footer-accordion-summary::-webkit-details-marker {
    display: none; /* 移除 Safari/Chrome 的默认 marker */
  }

  .anray-footer-accordion-content .rte, /* 替换 .anray-footer-column .rte */
  .anray-footer-accordion-content .rte p,
  .anray-footer-accordion-content .rte a {
    font-size: 0.9em;
    line-height: 1.6;
    color: {{ section.settings.color_text }};
  }
  .anray-footer-accordion-content .rte a {
    text-decoration: underline;
  }

  .anray-footer-menu-list { /* 替换 .anray-footer-column ul */
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .anray-footer-menu-list li { /* 替换 .anray-footer-column ul li */
    margin-bottom: 8px;
  }
  /* .anray-footer-column ul li a 和 a:hover 的样式由 reversed-link 和 Tailwind utility 类处理 */

  .anray-footer-logo {
    flex-grow: 1;
    display: flex;
    align-items: flex-start;
  }
  .anray-footer-logo img {
    max-height: {{ section.settings.logo_height }}px;
    display: block;
    height: 100%;
    width: auto;
    object-fit: contain;
    max-width: 100%;
  }
  .anray-footer-secure-payments .anray-button--sm,
  .anray-footer-social .anray-button--sm {
    margin-top: 25px;
    margin-bottom: 10px;
    color: {{ section.settings.color_text }};
  }
  .payment-icons { /* Styling for the <ul> container */
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 8px; /* Space between icons */
  }
  .payment-icons li svg {
    height: {{ section.settings.payment_icon_height }}px;
    width: auto; /* Maintain aspect ratio */
    display: block; /* Ensure proper layout */
  }
  .payment-icons--gray li svg {
    fill: {{ section.settings.color_text }}; /* Or a specific monochrome color */
  }
  .social-icons a svg { /* 假设 social-icons snippet 使用 SVG */
    fill: {{ section.settings.color_text }};
    width: 24px; /* 根据需要调整社交图标大小 */
    height: 24px;
  }
   .social-icons a {
    margin-right: 10px;
  }
  .anray-footer-copyright {
    text-align: center;
    margin-top: 40px; /* 与上方内容的间距 */
    padding-top: 20px;
    border-top: 1px solid #e0e0e0; /* 分割线颜色 */
    font-size: 0.85em; /* 版权文本大小 */
    color: {{ section.settings.color_text }};
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 15px;
    padding-right: 15px;
  }
  .anray-footer-copyright-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  }
  .anray-footer-copyright-text {
    margin: 0;
  }
  .anray-footer-policy-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 15px; /* Gap between policy links */
    justify-content: center;
  }
  .anray-footer-policy-links a {
    color: {{ section.settings.color_text }};
    text-decoration: none;
    font-size: 0.9em;
  }
  .anray-footer-policy-links a:hover {
    text-decoration: underline;
  }
  .anray-footer-localization {
    display: flex;
    gap: 20px;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }
  .anray-footer-localization .localization__form {
    position: relative;
  }
  .anray-footer-localization .localization__item {
    background-color: transparent;
    border: 1px solid {{ section.settings.color_text }};
    color: {{ section.settings.color_text }};
    padding: 5px 10px;
    border-radius: 3px;
    cursor: pointer;
    font-size: 0.9em;
  }
  .anray-footer-localization select.localization__item {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
  }

  @media (min-width: 769px) { /* Desktop layout for copyright bar */
    .anray-footer-copyright-content {
      flex-direction: row;
      justify-content: space-between;
    }
    .anray-footer-localization {
      /* Adjust positioning if needed */
    }
    .anray-footer-policy-links {
      order: -1; /* Policies can appear before or after copyright text based on design */
    }
    /* .anray-footer-accordion-item 的宽度由 flex-grow 和 gap 控制 */
  }

  /* 移除原有的 .anray-footer-column 宽度调整，Tailwind 类接管响应式 */
