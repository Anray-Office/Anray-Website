{% comment %} ANRAY Footer Section {% endcomment %}
<style>
  .anray-footer-container {
    background-color: {{ section.settings.color_background }};
    color: {{ section.settings.color_text }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    font-family: sans-serif; /* 基础字体，请根据您的品牌字体调整 */
  }
  .anray-footer-main {
   display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .anray-footer-left {
    flex: 1;
    min-width: 220px; /* 适应logo和支付信息 */
    margin-bottom: 70px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding-inline: clamp(var(--sp-10), 8.421vw, var(--sp-40));
    {% comment %} padding-block-start:0; {% endcomment %}
    {% comment %} border-block-start: none; {% endcomment %}
  }

  @media screen and (max-width: 768px) {
    .anray-footer-right{
      padding-inline: clamp(var(--sp-10), 8.421vw, var(--sp-40));
    }
  }

  .anray-footer-right {
    flex: 3;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    gap: 20px;
    align-items: flex-start;
  }
  .anray-footer-column {
    flex-grow: 0;
    flex-shrink: 0;
    width: calc((100% - 40px) / 3);
    min-width: 160px;
    margin-bottom: 20px;
  }
  .anray-footer-column h5 {
    font-size: 1em; /* 调整为图片中的大小 */
    font-weight: bold; /* 图片中标题是粗体 */
    margin-bottom: 15px; /* 标题和链接列表的间距 */
    color: {{ section.settings.color_text }};
    text-transform: uppercase; /* New: Make column titles uppercase like in the image */
  }
  .anray-footer-column .rte,
  .anray-footer-column .rte p,
  .anray-footer-column .rte a {
    font-size: 0.9em;
    line-height: 1.6;
    color: {{ section.settings.color_text }};
  }
  .anray-footer-column .rte a {
    text-decoration: underline; /* 根据需要调整 */
  }
  .anray-footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .anray-footer-column ul li {
    margin-bottom: 8px; /* 链接项之间的间距 */
  }
  .anray-footer-column ul li a {
    text-decoration: none;
    color: {{ section.settings.color_text }};
    line-height: 1.25;
  }
  .anray-footer-column ul li a:hover {
    text-decoration: underline;
  }
  .anray-footer-logo {
    flex-grow: 1;
    display: flex;
    align-items: flex-start;
  }
  .anray-footer-logo img {
    max-height: {{ section.settings.logo_height }}px;
    display: block;
    height: 100%;
    width: auto;
    object-fit: contain;
    max-width: 100%;
  }
  .anray-footer-secure-payments .anray-button--sm,
  .anray-footer-social .anray-button--sm {
    margin-top: 25px;
    margin-bottom: 10px;
    color: {{ section.settings.color_text }};
  }
  .payment-icons { /* Styling for the <ul> container */
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 8px; /* Space between icons */
  }
  .payment-icons li svg {
    height: {{ section.settings.payment_icon_height }}px;
    width: auto; /* Maintain aspect ratio */
    display: block; /* Ensure proper layout */
  }
  .payment-icons--gray li svg {
    fill: {{ section.settings.color_text }}; /* Or a specific monochrome color */
  }
  .social-icons a svg { /* 假设 social-icons snippet 使用 SVG */
    fill: {{ section.settings.color_text }};
    width: 24px; /* 根据需要调整社交图标大小 */
    height: 24px;
  }
   .social-icons a {
    margin-right: 10px;
  }
  .anray-footer-copyright {
    text-align: center;
    margin-top: 40px; /* 与上方内容的间距 */
    padding-top: 20px;
    border-top: 1px solid #e0e0e0; /* 分割线颜色 */
    font-size: 0.85em; /* 版权文本大小 */
    color: {{ section.settings.color_text }};
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 15px;
    padding-right: 15px;
  }
  .anray-footer-copyright-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  }
  .anray-footer-copyright-text {
    margin: 0;
  }
  .anray-footer-policy-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 15px; /* Gap between policy links */
    justify-content: center;
  }
  .anray-footer-policy-links a {
    color: {{ section.settings.color_text }};
    text-decoration: none;
    font-size: 0.9em;
  }
  .anray-footer-policy-links a:hover {
    text-decoration: underline;
  }
  .anray-footer-localization {
    display: flex;
    gap: 20px;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }
  .anray-footer-localization .localization__form {
    position: relative;
  }
  .anray-footer-localization .localization__item {
    background-color: transparent;
    border: 1px solid {{ section.settings.color_text }};
    color: {{ section.settings.color_text }};
    padding: 5px 10px;
    border-radius: 3px;
    cursor: pointer;
    font-size: 0.9em;
  }
  .anray-footer-localization select.localization__item {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
  }

  @media (min-width: 769px) { /* Desktop layout for copyright bar */
    .anray-footer-copyright-content {
      flex-direction: row;
      justify-content: center;
    }
    .anray-footer-localization {
      /* Adjust positioning if needed */
    }
    .anray-footer-policy-links {
      order: -1; /* Policies can appear before or after copyright text based on design */
    }
  }

  @media (max-width: 990px) { /* 中等屏幕调整 */
    .anray-footer-right {
      justify-content: flex-start;
    }
    .anray-footer-column {
       width: calc((100% - 20px) / 2);
    }
  }

  @media (max-width: 768px) { /* 移动端调整 */
    .anray-footer-main {
      flex-direction: column;
      align-items: flex-start;
      text-align: left;
    }
    .anray-footer-left,
    .anray-footer-right {
      width: 100%;
      flex-basis: auto;
    }
    .anray-footer-column {
      width: 100%;
    }
    .anray-footer-secure-payments,
    .anray-footer-social,
    .anray-footer-logo {
      text-align: left;
    }
  }
  .anray-footer-main {

  }
</style>

<div class="anray-footer-container">
  <div class="anray-footer-main page-width">
    <div class="anray-footer-left">
      {%- if section.settings.logo != blank -%}
        <div class="anray-footer-logo">
          <a href="{{ routes.root_url }}" aria-label="{{ shop.name }} Logo">
            <img
              src="{{ section.settings.logo | image_url: height: section.settings.logo_height }}"
              alt="{{ section.settings.logo.alt | default: shop.name }}"
              height="{{ section.settings.logo_height }}"
              width="{{ section.settings.logo.width | divided_by: section.settings.logo.height | times: section.settings.logo_height | round }}"
              loading="lazy"
            >
          </a>
        </div>
      {%- endif -%}
      {%- if section.settings.show_secure_payments -%}
        <div class="anray-footer-secure-payments">
          {%- if section.settings.secure_payments_title != blank -%}
            <p class="text-base-2xl font-medium anray-button--sm">{{ section.settings.secure_payments_title }}</p>
          {%- endif -%}
          <div class="payment-icons-container">
            {%- unless shop.enabled_payment_types == empty -%}
              <ul class="payment-icons{% if section.settings.monochrome_payment_icons %} payment-icons--gray{% endif %}">
                {%- for type in shop.enabled_payment_types -%}
                  <li>
                    {{- type | payment_type_svg_tag -}}
                  </li>
                {%- endfor -%}
              </ul>
            {%- endunless -%}
          </div>
        </div>
      {%- endif -%}

      {%- if section.settings.show_social_media -%}
        <div class="anray-footer-social">
          {%- if section.settings.social_media_title != blank -%}
            <p class="text-base-2xl font-medium anray-button--sm">{{ section.settings.social_media_title }}</p>
          {%- endif -%}
          {%- render 'social-icons', size: 'lg', gap: '7' -%}
        </div>
      {%- endif -%}
    </div>

    <div class="anray-footer-right">
      {%- for block in section.blocks -%}
        <div class="anray-footer-column" {{ block.shopify_attributes }}>
          {%- case block.type -%}
            {%- when 'link_list' -%}
              {%- comment -%}
                Rendering 'footer-menu' snippet for 'link_list' blocks.
                'footer-menu.liquid' expects 'block.settings.heading', 'block.settings.menu',
                and 'block.settings.opened'.
                The 'custom_text' setting from this section's schema for 'link_list' blocks
                is not used by 'footer-menu.liquid'.
              {%- endcomment -%}
              {% render 'footer-menu', block: block %}
            {%- when 'text' -%}
              {%- comment -%}
                Rendering 'footer-text' snippet for 'text' blocks.
                'footer-text.liquid' expects 'block.settings.heading', 'block.settings.text',
                and 'block.settings.opened'.
              {%- endcomment -%}
              {% render 'footer-text', block: block %}
            {%- when 'brand_information' -%}
              {%- comment -%}
                Rendering 'footer-contact' snippet for 'brand_information' blocks.
                'footer-contact.liquid' expects 'block.settings.heading',
                'block.settings.button_label_1/link_1' through 'button_label_4/link_4',
                and 'block.settings.opened'.
              {%- endcomment -%}
              {% render 'footer-contact', block: block %}
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
  </div>

  {%- if section.settings.copyright_text != blank -%}
    <div class="anray-footer-copyright">
      <div class="anray-footer-copyright-content page-width">
        <p class="anray-footer-copyright-text">
          {{ section.settings.copyright_text | replace: '[year]', 'now' | date: '%Y' }}
        </p>

        {%- if section.settings.show_policy_links -%}
          {%- assign policy_links = false -%}
          {%- for policy in shop.policies -%}
            {%- if policy != blank -%}
              {%- assign policy_links = true -%}
              {%- break -%}
            {%- endif -%}
          {%- endfor -%}
          {%- if policy_links -%}
            <ul class="anray-footer-policy-links">
              {%- for policy in shop.policies -%}
                {%- if policy != blank -%}
                  <li>
                    <a href="{{ policy.url }}">{{ policy.title }}</a>
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        {%- endif -%}

        {%- liquid
          assign enable_language_selector = false
          if section.settings.enable_language_selector and localization.available_languages.size > 1
            assign enable_language_selector = true
          endif

          assign enable_country_selector = false
          if section.settings.enable_country_selector and localization.available_countries.size > 1
            assign enable_country_selector = true
          endif
        -%}

        {%- if enable_language_selector or enable_country_selector -%}
          <div class="anray-footer-localization">
            {%- if enable_language_selector -%}
              <div>
                {%- form 'localization', id: 'AnrayFooterLanguageForm', class: 'localization__form' -%}
                  <label for="AnrayFooterLanguageList" class="sr-only">{{ 'localization.language_label' | t }}</label>
                  <button type="button" class="localization__item">
                    {{ localization.language.endonym_name | capitalize }}
                  </button>
                  <select
                    name="locale_code"
                    id="AnrayFooterLanguageList"
                    class="localization__item"
                    onchange="this.form.submit()"
                  >
                    {%- for language in localization.available_languages -%}
                      <option
                        value="{{ language.iso_code }}"
                        {%- if language.iso_code == localization.language.iso_code %}
                          selected
                        {% endif %}
                      >
                        {{ language.endonym_name | capitalize }}
                      </option>
                    {%- endfor -%}
                  </select>
                {%- endform -%}
              </div>
            {%- endif -%}

            {%- if enable_country_selector -%}
              <div>
                {%- form 'localization', id: 'AnrayFooterCountryForm', class: 'localization__form' -%}
                  <label for="AnrayFooterCountryList" class="sr-only">{{ 'localization.country_label' | t }}</label>
                  <button type="button" class="localization__item">
                    {{ localization.country.name }} ({{ localization.country.currency.iso_code }}
                    {{ localization.country.currency.symbol }})
                  </button>
                  <select
                    name="country_code"
                    id="AnrayFooterCountryList"
                    class="localization__item"
                    onchange="this.form.submit()"
                  >
                    {%- for country in localization.available_countries -%}
                      <option
                        value="{{ country.iso_code }}"
                        {%- if country.iso_code == localization.country.iso_code %}
                          selected
                        {% endif %}
                      >
                        {{ country.name }} ({{ country.currency.iso_code }}
                        {{ country.currency.symbol }})
                      </option>
                    {%- endfor -%}
                  </select>
                {%- endform -%}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  {%- endif -%}
</div>

