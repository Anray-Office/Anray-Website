<style>
    #shopify-section-{{ section.id }} {
      --section-padding-top: {{ section.settings.padding_top }}px;
      --section-padding-bottom: {{ section.settings.padding_bottom }}px;
      {%- render 'section-variables', section: section -%};
    }

    .anray-product-grid {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 300px));
      gap: 1.25rem;
      justify-content: center;
  }

  .anray-product-card {
      text-align: center;
      padding: 1rem;
      transition: all 0.3s ease;
      cursor: pointer;
  }

  .anray-product-link {
      display: block;
      text-decoration: none;
      color: inherit;
  }

  .anray-product-image-wrapper {
      width: 100%;
      margin-bottom: 1rem;
      overflow: hidden;
      position: relative;
      overflow: hidden;
      background-color: #fff;
  }

  .anray-product-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: transform 0.3s ease;
  }

  .anray-product-image-wrapper:hover .anray-product-image {
      transform: translateX(15px) translateY(-15px) scale(1.05);
  }

  .anray-product-title {
      font-size: 1rem;
      font-weight: normal;
      margin-bottom: 0.5rem;
      color: #333;
      /* 文本截断 - 两行 */
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      /* Firefox */
      max-height: 2.4em;
      line-height: 1.2;
      padding: 0 4px;
  }

  .anray-product-price {
      font-size: 1rem;
      font-weight: bold;
      color: #333;
  }

  /* 响应式布局 */
  @media screen and (max-width: 1200px) {
      .anray-product-grid {
          grid-template-columns: repeat(3, minmax(0, 280px));
      }
  }

  @media screen and (max-width: 768px) {
      .anray-product-grid {
          grid-template-columns: repeat(2, minmax(0, 250px));
          gap: 1rem;
      }
  }

  @media screen and (max-width: 480px) {
      .anray-product-grid {
          grid-template-columns: repeat(2, minmax(0, 1fr));
          gap: 0.75rem;
          grid-template-rows: repeat(2, auto);
          grid-auto-rows: 0;
          overflow: hidden;
      }

      .anray-product-card {
          padding: 0;
      }

      .anray-product-title {
          font-size: 0.9rem;
      }
  }
</style>

