<script>
  // 轮播图功能实现
  const slider = document.querySelector('.anray-slider');
  const slides = document.querySelectorAll('.anray-slide');
  const dots = document.querySelectorAll('.anray-pagination-dot');
  const progressBars = document.querySelectorAll('.anray-progress');

  let currentSlide = 0;
  const slideInterval = 5000; // 5秒切换一次
  let slideTimer;

  // 初始化轮播图
  function initSlider() {
    // 设置第一张幻灯片为激活状态
    slides[0].classList.add('anray-active');

    // 设置分页点击事件
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        goToSlide(index);
        resetProgressBar();
        startProgressBar(index);
      });
    });

    // 添加触摸滑动支持
    let touchStartX = 0;
    let touchEndX = 0;

    slider.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    });

    slider.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    });

    function handleSwipe() {
      // 向左滑动 (下一张)
      if (touchEndX < touchStartX - 50) {
        const nextSlide = (currentSlide + 1) % slides.length;
        goToSlide(nextSlide);
      }
      // 向右滑动 (上一张)
      if (touchEndX > touchStartX + 50) {
        const prevSlide = (currentSlide - 1 + slides.length) % slides.length;
        goToSlide(prevSlide);
      }
    }

    // 开始自动轮播
    startSlideTimer();
  }

  // 切换到指定幻灯片
  function goToSlide(index) {
    // 重置当前进度条
    resetProgressBar();

    // 移除当前激活的幻灯片
    slides[currentSlide].classList.remove('anray-active');

    // 更新当前幻灯片索引
    currentSlide = index;

    // 激活新的幻灯片
    slides[currentSlide].classList.add('anray-active');

    // 更新分页点状态
    updateDots();

    // 重新开始计时器
    startSlideTimer();
  }

  // 更新分页点状态
  function updateDots() {
    dots.forEach((dot, index) => {
      if (index === currentSlide) {
        dot.classList.add('anray-active');
        // 开始进度条动画
        startProgressBar(index);
      } else {
        dot.classList.remove('anray-active');
      }
    });
  }

  // 开始进度条动画
  function startProgressBar(index) {
    const progress = progressBars[index];
    progress.style.width = '0%';

    // 使用CSS动画实现进度条
    progress.style.transition = `width ${slideInterval}ms linear`;
    setTimeout(() => {
      progress.style.width = '100%';
    }, 50);
  }

  // 重置进度条
  function resetProgressBar() {
    progressBars.forEach((progress) => {
      progress.style.transition = 'none';
      progress.style.width = '0%';
    });
  }

  // 开始自动轮播计时器
  function startSlideTimer() {
    // 清除现有计时器
    if (slideTimer) {
      clearTimeout(slideTimer);
    }

    // 设置新计时器
    slideTimer = setTimeout(() => {
      // 计算下一张幻灯片索引
      const nextSlide = (currentSlide + 1) % slides.length;
      goToSlide(nextSlide);
    }, slideInterval);
  }

  // 初始化轮播图
  initSlider();
  // 显示第一张幻灯片的进度条
  startProgressBar(0);
</script>

