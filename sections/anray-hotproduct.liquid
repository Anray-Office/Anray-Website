<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%};
  }

  .anray-containercc {
      display: flex;
      gap: 20px;
      justify-content: center;
      height: 450px;
    }

    /* 左侧轮播图部分 */
    .anray-slider-container {
      flex: 1;
      position: relative;
      overflow: hidden;
      /* max-width: 710px; */
      height: 100%;
    }

    .anray-slider {
      height: inherit;
      position: relative;
    }

    .anray-slide {
      position: absolute;
      width: 100%;
      height: 100%;
      opacity: 0;
      transition: opacity 0.5s ease;
      top: 0;
      left: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
    }

    .anray-slide.anray-active {
      opacity: 1;
      z-index: 1;
    }

    .anray-slide img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    /* 分页器样式 */
    .anray-pagination {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 10px;
      padding: 8px;
      border-radius: 20px;
      background: rgba(0, 0, 0, 0.3);
      z-index: 2;
    }

    .anray-pagination-dot {
      width: 8px;
      height: 8px;
      border-radius: 4px;
      background-color: #fff;
      cursor: pointer;
      position: relative;
      overflow: hidden;
      transition: all 0.3s ease-in-out;
    }

    .anray-pagination-dot.anray-active {
      width: 30px;
      height: 8px;
      border-radius: 15px;
      background-color: #ffffff8c;
      transition: all 0.3s ease-in-out;
    }

    /* 进度条样式 */
    .anray-pagination-dot .anray-progress {
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 0;
      background-color: #fff;
      border-radius: inherit;
      z-index: 1;
    }

    /* 右侧产品展示部分 */
    .anray-products {
      display: flex;
      flex-direction: column;
      gap: 20px;
      max-width: 460px;
    }

    .anray-product {
      background-color: white;
      border-radius: 10px;
      padding: 15px;
      height: calc(50% - 10px);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .anray-product-content-top,
    .anray-product-content-bottom {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 100%;
    }

    .anray-product-info-top,
    .anray-product-info-bottom,
    .anray-product-image-top,
    .anray-product-image-bottom {
      width: 50%;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      gap: 10px;
    }

    .anray-product-subtitle-top,
    .anray-product-subtitle-bottom {
      color: #7c5a4a;
      font-size: clamp(12px, 1.2vw, 15px);
      font-weight: normal;
      text-align: left;
    }

    .anray-product-title-top,
    .anray-product-title-bottom {
      color: #5a3d2b;
      font-size: clamp(16px, 2vw, 34px);
      font-weight: bold;
    }

    .anray-product-content .anray-product-image {
      max-width: 305px;
    }

    .anray-product-image-top,
    .anray-product-image-bottom {
      text-align: center;
      align-items: center;
    }

    .anray-product-image-bottom {
      text-align: left;
      align-self: center;
    }

    .anray-product-image-top img,
    .anray-product-image-bottom img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    .anray-button--secondary {
      background: #9a7e5e;
      color: #fff;
      font-weight: normal;
      border-radius: 4px;
      padding: clamp(6px, 0.8vw, 8px) clamp(12px, 1.5vw, 16px);
      font-size: clamp(12px, 1.2vw, 14px);
      text-decoration: none;
      display: inline-block;
    }

    /* 媒体查询 - 平板电脑 */
    @media (max-width: 1024px) {
      .anray-containercc {
        flex-direction: column;
        height: auto;
      }

      .anray-slider-container {
        height: 40vh;
        width: 100%;
        max-width: 100%;
        flex: 1;
      }

      .anray-products {
        width: 100%;
        flex-direction: row;
        max-width: 100%;
      }

      .anray-product {
        width: calc(50% - 10px);
        height: auto;
      }

      .anray-product-content {
        flex-direction: column;
        align-items: flex-start;
      }

      .anray-product-image {
        width: 100%;
        text-align: center;
        margin-top: 15px;
      }

      .anray-product-image img {
        max-height: 150px;
      }
    }

    /* 媒体查询 - 手机 */
    @media (max-width: 768px) {
      body {
        padding: 10px;
      }

      .anray-containercc {
        gap: 10px;
      }

      .anray-products {
        flex-direction: column;
        gap: 10px;
      }

      .anray-product {
        width: 100%;
      }

      .anray-pagination {
        bottom: 10px;
      }
    }

    .anray-section--rounded {
      border-radius: var(--border-radius,12px);
    }
</style>
