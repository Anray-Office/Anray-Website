    </div>
  </div>
</div>

<style>
  :root {
    --anray-primary-color: #F15A22;
    --anray-secondary-color: #0A0E27;
    --anray-text-color: #333;
    --anray-border-color: #e5e5e5;
    --anray-bg-light: #f8f8f8;
  }

  .anray-product-container {
    width: 100%;
    margin: 2rem 0;
  }

  .anray-product-tabs {
    display: inline-flex;
    position: relative;
    background-color: #fff;
    box-shadow: 0 0 1px 0 rgba(24, 94, 224, 0.15), 0 6px 12px 0 rgba(24, 94, 224, 0.15);
    padding: 0.5rem;
    border-radius: 50px;
    margin-bottom: 2rem;
  }

  .anray-product-tabs * {
    z-index: 2;
  }

  .anray-product-tabs input[type='radio'] {
    display: none;
  }

  .product-tab {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 45px;
    width: 140px;
    font-size: 1.1rem;
    font-weight: 500;
    border-radius: 50px;
    cursor: pointer;
    transition: color 0.15s ease-in;
    color: var(--anray-text-color);
  }

  .anray-product-tabs input[type='radio']:checked + label {
    color: #fff;
  }

  .anray-product-tabs input[id='spec-tab']:checked ~ .anray-tab-glider {
    transform: translateX(0);
  }

  .anray-product-tabs input[id='others-tab']:checked ~ .anray-tab-glider {
    transform: translateX(100%);
  }

  .anray-tab-glider {
    position: absolute;
    display: flex;
    height: 45px;
    width: 140px;
    background-color: var(--anray-secondary-color);
    z-index: 1;
    border-radius: 50px;
    transition: 0.25s ease-out;
  }

  /* Tab Content */
  .anray-tab-content {
    position: relative;
    min-height: 400px;
  }

  .tab-panel {
    display: none;
    animation: fadeIn 0.3s ease-in;
  }

  .anray-product-tabs input[id='spec-tab']:checked ~ .anray-tab-content #spec-content {
    display: block;
  }

  .anray-product-tabs input[id='others-tab']:checked ~ .anray-tab-content #others-content {
    display: block;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Spec Content Styles */
  .spec-section {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--anray-border-color);
  }

  .spec-section:last-child {
    border-bottom: none;
  }

  .spec-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--anray-secondary-color);
    margin-bottom: 1rem;
  }

  .spec-item {
    margin-bottom: 0.75rem;
    line-height: 1.6;
  }

  .spec-label {
    font-weight: 600;
    color: var(--anray-text-color);
    display: block;
    margin-bottom: 0.25rem;
  }

  .spec-value {
    color: #666;
    display: block;
    padding-left: 0;
  }

  /* Others Content Styles */
  .others-section {
    margin-bottom: 2.5rem;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .section-icon {
    color: var(--anray-secondary-color);
  }

  .section-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--anray-secondary-color);
  }

  .button-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .action-button {
    padding: 0.75rem 2rem;
    border-radius: 50px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
    min-width: 120px;
    text-align: center;
  }

  .primary-btn {
    background-color: var(--anray-secondary-color);
    color: #fff;
    border: 2px solid var(--anray-secondary-color);
  }

  .primary-btn:hover {
    background-color: transparent;
    color: var(--anray-secondary-color);
  }

  .secondary-btn {
    background-color: transparent;
    color: var(--anray-secondary-color);
    border: 2px solid var(--anray-secondary-color);
  }

  .secondary-btn:hover {
    background-color: var(--anray-secondary-color);
    color: #fff;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .anray-product-tabs {
      padding: 0.4rem;
    }

    .product-tab {
      height: 40px;
      width: 120px;
      font-size: 1rem;
    }

    .anray-tab-glider {
      height: 40px;
      width: 120px;
    }

    .spec-title {
      font-size: 1.1rem;
    }

    .button-group {
      flex-direction: column;
    }

    .action-button {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .anray-product-tabs {
      transform: scale(0.9);
    }
  }
</style>

<script>
  // Ensure tab content visibility is properly controlled
  document.addEventListener('DOMContentLoaded', function() {
    const tabInputs = document.querySelectorAll('.anray-product-tabs input[type="radio"]');
    const tabPanels = document.querySelectorAll('.tab-panel');
    
    tabInputs.forEach(input => {
      input.addEventListener('change', function() {
        tabPanels.forEach(panel => {
          panel.style.display = 'none';
        });
        
        if (this.id === 'spec-tab') {
          document.getElementById('spec-content').style.display = 'block';
        } else if (this.id === 'others-tab') {
          document.getElementById('others-content').style.display = 'block';
        }
      });
    });
  });
</script>

